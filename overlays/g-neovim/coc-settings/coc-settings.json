{
	"explorer.icon.enableNerdfont": true,
	//	"explorer.icon.enableVimDevicons": true,
  	"typescript.format.enabled": true,
	"typescript.preferences.quoteStyle": "double",

	"javascript.format.enabled": true,
	"javascript.showUnused": true,
	"javascript.preferences.quoteStyle": "double",

//  "tslint.jsEnable": true,
//  "tslint.autoFixOnSave": true,
//  "tslint.alwaysShowRuleFailuresAsWarnings": false,
	"eslint.autoFixOnSave": true,

	"codeLens.enable": true,
	"html.autoClosingTags": true,
	"html.enable": true,
	"vimlsp.indexes.count": 3,
	"yaml.format.enable": true,


	"tsserver.implicitProjectConfig.checkJs": true,
	"tsserver.implicitProjectConfig.experimentalDecorators": true,
	"tsserver.enable": true,

	"prettier.eslintIntegration": true,
	"prettier.printWidth": 120,
	"prettier.requireConfig": false,
	"prettier.semi": false,
	"prettier.tabWidth": 2,
	"prettier.trailingComma": "es5",
	"prettier.tslintIntegration": true,

	"suggest.acceptSuggestionOnCommitCharacter": true,
	"suggest.enablePreview": true,
	"suggest.minTriggerInputLength": 0,
	"suggest.noselect": false,
	"suggest.removeDuplicateItems": true,
	"suggest.snippetIndicator": "â–º",
	"suggest.timeout": 500,
	"suggest.triggerAfterInsertEnter": true,

	"coc.preferences.rootPatterns": [
		".env",
		".git",
		".hg",
		".projections.json",
		".vim",
		"Cargo.toml",
		"Pipfile",
		"build.gradle",
		"build.gradle.kts",
		"package.json",
		"pom.xml",
		"pyproject.toml",
		"setup.py"
	],

	"coc.preferences.formatOnInsertLeave": true,
	"coc.preferences.formatOnSaveFiletypes": [
		"Markdown",
		"javascript",
		"javascriptreact",
		"python",
		"rust",
		"typescript",
		"typescriptreact"
	],
    "languageserver": {
        "nix": {
          "command": "rnix-lsp",
          "filetypes": [
            "nix"
          ]
        }
    },


	"snippets.priority": 100,
	"snippets.extends": {
		"javascriptreact": ["javascript"],
		"typescriptreact": ["typescript"]
	}
}
